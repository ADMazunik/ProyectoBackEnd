{{>navbar}}

<button onclick="location.href='/login'" class="btn btn-sm btn-danger m-2 fw-bold">Back to Login</button>

<h1 class="text-center my-4">Sign Up</h1>

<form action="/users/register" method="post">
    <div class="d-flex flex-column container gap-2">
        <label for="password">First Name:</label>
        <input type="text" id="firstName" name="first_name" />
        <label for="password">Last Name:</label>
        <input type="text" id="lastName" name="last_name" />
        <label for="password">Email:</label>
        <input type="text" id="email" name="email" />
        <label for="password">Age:</label>
        <input type="number" id="age" name="age" />
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" />
        <input type="submit" class="btn btn-lg btn-success" value="Sign Up!">
    </div>
</form>